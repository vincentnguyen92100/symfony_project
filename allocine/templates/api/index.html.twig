{% extends 'base.html.twig' %}

{% block title %}Liste des Regions
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for maRegion in mesRegions %}
                <div class="col-md-3">
                    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{ maRegion.nom }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ maRegion.code }}</h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
